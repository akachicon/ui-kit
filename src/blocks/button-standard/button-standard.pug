mixin button-standard(text = 'button', mods = {})
  -
    const { getClassList } = globals;

    const defaults = {
      size: 'm',
      color: 'terracotta'
    }

    const buttonClassList = getClassList({
      block: 'button-standard',
      mods: Object.assign(defaults, mods)
    })

    const textClassList = getClassList({
      block: 'button-standard',
      element: 'text'
    })

  button(class=buttonClassList)
    span(class=textClassList)= text
